<h1 style="text-align: left; color: grey">Contact Us</h1>

<%= flash[:notice] %>

<%= form_tag("/static_pages/thank_you") do %>
  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <%= text_field_tag :name, nil, class: "form-control pull-left", placeholder: "Enter Name", required: true %>
      </div><br>
      <div class="form-group">
        <%= text_field_tag :email, nil, class: "form-control pull-left", placeholder: "Enter Email", required: true %>
      </div><br>
      <div class="form-group">
        <%= text_area_tag :message, nil, class: "form-control pull-left", placeholder: "Enter Message", required: true %>
      </div><br>
    </div>
  </div>
  <%= submit_tag "Send", class: "btn btn-default pull-left" %>
<% end %>