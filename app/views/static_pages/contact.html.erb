<h1 style="text-align: left; color: grey">Contact Us</h1>

<%= flash[:notice] %>

<%= form_with(url: "/static_pages/thank_you") do |form| %>
  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <%= form.label :name, class:"pull-left" %>
        <%= form.text_field :name, class:"form-control", placeholder: "Enter Name", required: true %>
      </div>
      <div class="form-group">
        <%= form.label :email, "Email Address", class:"pull-left" %>
        <%= form.text_field :email, class: "form-control", placeholder: "Enter Email", required: true %>
      </div>
      <div class="form-group">
        <%= form.label :message, class:"pull-left" %>
        <%= form.text_area :message, class: "form-control", placeholder: "Enter Message", required: true %>
      </div>
    </div>
  </div>
  <%= form.submit "Send", class:"btn btn-default pull-left" %>
<% end %>