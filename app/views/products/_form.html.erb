<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group col-sm-4 col-md-offset-4">
    <%= form.label :name %>
    <%= form.text_field :name, id: :product_name, autofocus: true, class:"form-control" %>
  </div>

  <div class="form-group col-sm-4 col-md-offset-4">
    <%= form.label :description %>
    <%= form.text_area :description, id: :product_description, autofocus: true, class:"form-control" %>
  </div>
 
  <div class="form-group col-sm-4 col-md-offset-4">
    <%= form.label :image_URL %>
    <%= form.text_field :image_URL, id: :product_image_URL, autofocus: true, class:"form-control" %>
  </div>

  <div class="form-group col-sm-4 col-md-offset-4">
    <%= form.label :colour %>
    <%= form.text_field :colour, id: :product_colour, autofocus: true, class:"form-control" %>
  </div>

  <div class="form-group col-sm-4 col-md-offset-4">
    <%= form.label :price %>
    <%= form.text_field :price, autofocus: true, class:"form-control" %>
  </div>

  <div class="actions row col-sm-4 col-md-offset-4">
    <%= form.submit "Create", class:"btn btn-default" %>
  </div>
<% end %>
