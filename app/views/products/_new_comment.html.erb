<% if signed_in? %>
	<h4>Add a review:</h4>
	<%= form_for([@product, @product.comments.build], remote: true) do |f| %>
		<div class="field">
			<p>
				<%= f.label :body, "Comments" %>
				<%= f.text_area :body %>
			</p>
		</div>
		<div class="field">
			<p>
				<div class="rating"></div>
			</p>
		</div>
		<div class="action">
			<button type="button" class="btn btn-default">
				<%= f.submit "Submit" %>
			</button>
		</div>
	<% end %>
<% end %>
